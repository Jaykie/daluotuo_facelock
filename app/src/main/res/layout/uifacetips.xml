<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg_facetips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="bg"
            app:srcCompat="@drawable/bg_detect_success" />

        <ImageView
            android:id="@+id/icon_facetips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="bg"
            app:srcCompat="@drawable/icon_success" />

        <TextView
            android:id="@+id/text_facetips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="title"
            android:textAlignment="center"
            android:textColor="@color/home_text_company"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <Button
            android:id="@+id/btn_facetips_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
